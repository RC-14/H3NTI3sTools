{
	"browser_specific_settings": {
		"gecko": {
			"id": "{8c59cf1a-8d7e-4e3e-bb53-781a3e29b3ea}"
		}
	},
	"manifest_version": 2,
	"name": "H3NTI3's Tools",
	"short_name": "H3NTI3sTools",
	"version": "0",
	"icons": {
		"120": "icons/120px.png"
	},
	"background": {
		"page": "src/background/page.html"
	},
	"content_scripts": [
		{
			"matches": [
				"<all_urls>"
			],
			"js": [
				"src/content/hideCursor/main.ts",
				"src/content/noSpaceScroll/main.ts"
			],
			"all_frames": true,
			"run_at": "document_start"
		},
		{
			"matches": [
				"*://www.asura.gg/*",
				"*://www.asurascans.com/*"
			],
			"js": [
				"src/content/asurascans/main.ts"
			],
			"run_at": "document_start"
		},
		{
			"matches": [
				"*://flamescans.org/*"
			],
			"js": [
				"src/content/flamescans/main.ts"
			],
			"run_at": "document_start"
		},
		{
			"matches": [
				"*://mangahub.io/*"
			],
			"js": [
				"src/content/mangahub/main.ts"
			],
			"run_at": "document_start"
		},
		{
			"matches": [
				"*://pixiv.net/*"
			],
			"js": [
				"src/content/pixiv/main.ts"
			],
			"run_at": "document_start"
		},
		{
			"matches": [
				"*://reaperscans.com/*"
			],
			"js": [
				"src/content/reaperscans/main.ts"
			],
			"run_at": "document_start"
		},
		{
			"matches": [
				"*://saucenao.com/*"
			],
			"js": [
				"src/content/saucenao/main.ts"
			],
			"run_at": "document_start"
		},
		{
			"matches": [
				"*://webtoons.com/*"
			],
			"js": [
				"src/content/webtoon/main.ts"
			],
			"run_at": "document_start"
		}
	],
	"permissions": [
		"<all_urls>",
		"scripting",
		"storage"
	]
}
