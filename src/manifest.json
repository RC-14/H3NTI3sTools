{
	"browser_specific_settings": {
		"gecko": {
			"id": "{8c59cf1a-8d7e-4e3e-bb53-781a3e29b3ea}"
		}
	},
	"manifest_version": 2,
	"name": "H3NTI3's Tools",
	"short_name": "H3NTI3sTools",
	"version": "0",
	"icons": {
		"120": "./images/icon/120.png"
	},
	"background": {
		"scripts": [
			"./background/loader.js"
		]
	},
	"options_ui": {
		"open_in_tab": true,
		"page": "./pages/options/index.html"
	},
	"browser_action": {
		"default_area": "navbar",
		"default_icon": "./images/icon/120.png",
		"default_popup": "./popup/index.html",
		"default_title": "H3NTI3's Tools"
	},
	"protocol_handlers": [
		{
			"protocol": "ext+h3nti3",
			"name": "H3NTI3's Tools Extension Pages shortcut",
			"uriTemplate": "/%s"
		}
	],
	"content_scripts": [
		{
			"matches": [
				"<all_urls>"
			],
			"js": [
				"./content/devToolHelpers/main.js",
				"./content/hideCursor/main.js",
				"./content/noSpaceScroll/main.js"
			],
			"all_frames": true,
			"run_at": "document_start"
		},
		{
			"matches": [
				"<all_urls>"
			],
			"exclude_matches": [
				"*://nhentai.net/*"
			],
			"css": [
				"./content/hideCursor/styles.css"
			],
			"all_frames": true
		},
		{
			"matches": [
				"*://e-hentai.org/*"
			],
			"js": [
				"./content/e-hentai/main.js"
			],
			"css": [
				"./content/e-hentai/styles.css"
			],
			"run_at": "document_start"
		},
		{
			"matches": [
				"*://hanime.tv/*"
			],
			"js": [
				"./content/hanime/main.js"
			],
			"run_at": "document_start"
		},
		{
			"matches": [
				"*://hentai2read.com/*"
			],
			"js": [
				"./content/hentai2read/main.js"
			],
			"css": [
				"./content/hentai2read/styles.css"
			],
			"run_at": "document_start"
		},
		{
			"matches": [
				"*://hiperdex.com/*",
				"*://1sthiperdex.com/*",
				"*://hiperdex.xyz/*"
			],
			"js": [
				"./content/hiperdex/main.js"
			],
			"css": [
				"./content/hiperdex/styles.css"
			],
			"run_at": "document_start"
		},
		{
			"matches": [
				"*://kemono.party/*",
				"*://kemono.su/*"
			],
			"js": [
				"./content/kemono/main.js"
			],
			"css": [
				"./content/kemono/styles.css"
			],
			"run_at": "document_start"
		},
		{
			"matches": [
				"*://www.kenmei.co/*"
			],
			"js": [
				"./content/kenmei/main.js"
			],
			"run_at": "document_start"
		},
		{
			"matches": [
				"*://nhentai.net/*"
			],
			"js": [
				"./content/nhentai/main.js"
			],
			"css": [
				"./content/nhentai/styles.css"
			],
			"run_at": "document_start"
		},
		{
			"matches": [
				"*://www.pixiv.net/*"
			],
			"js": [
				"./content/pixiv/main.js"
			],
			"css": [
				"./content/pixiv/styles.css"
			],
			"run_at": "document_start"
		},
		{
			"matches": [
				"*://saucenao.com/*"
			],
			"js": [
				"./content/saucenao/main.js"
			],
			"run_at": "document_start"
		}
	],
	"permissions": [
		"<all_urls>",
		"cookies",
		"history",
		"scripting",
		"storage",
		"tabHide",
		"unlimitedStorage",
		"webNavigation",
		"webRequest",
		"webRequestBlocking"
	],
	"optional_permissions": [
		"activeTab",
		"alarms",
		"background",
		"bookmarks",
		"browserSettings",
		"browsingData",
		"captivePortal",
		"clipboardRead",
		"clipboardWrite",
		"contentSettings",
		"contextMenus",
		"contextualIdentities",
		"debugger",
		"declarativeNetRequest",
		"declarativeNetRequestFeedback",
		"declarativeNetRequestWithHostAccess",
		"devtools",
		"dns",
		"downloads",
		"downloads.open",
		"find",
		"geolocation",
		"identity",
		"idle",
		"management",
		"menus",
		"menus.overrideContext",
		"nativeMessaging",
		"notifications",
		"pageCapture",
		"pkcs11",
		"privacy",
		"proxy",
		"search",
		"sessions",
		"tabs",
		"theme",
		"topSites",
		"webRequestFilterResponse",
		"webRequestFilterResponse.serviceWorkerScript"
	]
}
