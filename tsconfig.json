{
	"exclude": [
		"web-ext-config.js",
		"old"
	],
	"compilerOptions": {
		"incremental": true,
		"target": "ES2022",
		"module": "ES2022",
		"moduleResolution": "node16",
		"lib": [
			"ESNext",
			"DOM"
		],
		"rootDir": "./src",
		"paths": {
			"/*": ["./*"],
			"~/*": ["./*"]
		},
		// "typeRoots": [],
		// "types": [],
		"removeComments": true,
		"importsNotUsedAsValues": "remove",
		"inlineSourceMap": true,
		"inlineSources": true,
		"noEmitOnError": true,
		"isolatedModules": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipDefaultLibCheck": true,
		"skipLibCheck": false
	},
	"typeAcquisition": {
		"disableFilenameBasedTypeAcquisition": true
	}
}
